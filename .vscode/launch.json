{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MLP - Train & Eval",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/mlp", // ejecutable que compila la task
            "args": [
                "-t",
                "${workspaceFolder}/datasetsPr1IMC/train_sin.dat", // <-- TRAIN .dat
                "-T",
                "${workspaceFolder}/datasetsPr1IMC/test_sin.dat", // <-- TEST .dat
                "-i",
                "2000", // iteraciones
                "-w",
                "${workspaceFolder}/models/pesos.out" // guardar mejores pesos (texto)
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build MLP (Debug)", // usa la task que compila todo
            "miDebuggerArgs": "",
            "logging": {
                "moduleLoad": false
            },
            "visualizerFile": "${workspaceFolder}/.vscode/cpp_vs.xml"
        },
        {
            "name": "MLP - Predict (Kaggle)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/mlp",
            "args": [
                "-p", // modo predicciÃ³n
                "-T",
                "${workspaceFolder}/datasetsPr1IMC/test_sin.dat", // dataset para predecir
                "-w",
                "${workspaceFolder}/models/pesos.out" // cargar pesos entrenados (texto)
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build MLP (Debug)",
            "miDebuggerArgs": "",
            "logging": {
                "moduleLoad": false
            },
            "visualizerFile": "${workspaceFolder}/.vscode/cpp_vs.xml"
        }
    ]
}