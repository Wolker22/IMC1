{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "cppbuild",
            "command": "/usr/bin/g++",  // Ruta al compilador g++
            "args": [
                "-fdiagnostics-color=always", // Color en los diagnósticos
                "-g",  // Generar información de depuración
                "${file}",  // El archivo activo (el que estás editando)
                "-o", 
                "${fileDirname}/${fileBasenameNoExtension}", // Salida con el mismo nombre que el archivo
                "imc/*"
            ],
            "options": {
                "cwd": "${fileDirname}"  // Directorio de trabajo donde está el archivo
            },
            "problemMatcher": [
                "$gcc"  // Configuración de detección de problemas con gcc
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // Esta es la tarea de construcción predeterminada
            },
            "detail": "Task generated by Debugger."  // Detalles de la tarea
        }
    ]
}
