{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MLP (Debug)",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-Wextra",
                "-I",
                "${workspaceFolder}",
                "${workspaceFolder}/la1.cpp",
                "${workspaceFolder}/imc/MultilayerPerceptron.cpp",
                "${workspaceFolder}/imc/util.cpp",
                "-o",
                "${workspaceFolder}/bin/mlp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build MLP (Release)",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-O2",
                "-DNDEBUG",
                "-I",
                "${workspaceFolder}",
                "${workspaceFolder}/la1.cpp",
                "${workspaceFolder}/imc/MultilayerPerceptron.cpp",
                "${workspaceFolder}/imc/util.cpp",
                "-o",
                "${workspaceFolder}/bin/mlp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "rm -f ${workspaceFolder}/bin/mlp ${workspaceFolder}/*.o ${workspaceFolder}/imc/*.o"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}